<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_8"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="lab_8.view_Window"
        mc:Ignorable="d"
        Title="view_Window" Height="450" Width="800">
    <Grid>
        <Button x:Name="del_button" Content="Delete" HorizontalAlignment="Left" Margin="454,383,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="reload_button" Content="Reload" HorizontalAlignment="Left" Margin="587,383,0,0" VerticalAlignment="Top" Width="75"/>
        <DataGrid x:Name="data_view" HorizontalAlignment="Left" Height="147" Margin="220,96,0,0" VerticalAlignment="Top" Width="377">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path= id}" ClipboardContentBinding="{x:Null}" Header="id"/>
                <DataGridTextColumn Binding="{Binding Path= name}" ClipboardContentBinding="{x:Null}" Header="name"/>
                <DataGridTextColumn Binding="{Binding Path= age}" ClipboardContentBinding="{x:Null}" Header="age"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
